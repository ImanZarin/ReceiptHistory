<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skywavestudios.receipthistory.shared.ActivityReceipt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_normal_margin"
        android:orientation="vertical"
        android:weightSum="5">

        <EditText
            android:id="@+id/receipt_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/main_normal_margin"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/receipt_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/main_normal_margin"
            android:layout_weight="3"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/main_normal_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/receipt_confirm"
                android:layout_width="@dimen/receipt_button_width"
                android:layout_height="@dimen/receipt_button_height"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/main_normal_margin"
                android:text="@string/receipt_confirm" />

            <Button
                android:id="@+id/receipt_remove"
                android:layout_width="@dimen/receipt_button_width"
                android:layout_height="@dimen/receipt_button_height"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/main_normal_margin"
                android:text="@string/receipt_remove" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
